<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130sp"
    android:layout_height="220dp"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_sanpham"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvhinhanhloaisanpham"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tensanphamtheoloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Snack mực vị cay Bento 4g"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/giasanphamtheoloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="7.000đ"
            android:textSize="15dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="#92F696"
            android:text="MUA" />
    </LinearLayout>
</LinearLayout>