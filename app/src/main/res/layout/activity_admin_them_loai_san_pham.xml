<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminThemLoaiSanPhamActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/main"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm loại sản phẩm"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tensanphamLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_tensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên loại sản phẩm mới" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/idloaisanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="40sp"
            android:text="ID loại sản phẩm: "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tensanphamLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/loaisanphamLayout"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"

            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/idloaisanpham"
            app:layout_constraintStart_toEndOf="@+id/idloaisanpham"
            app:layout_constraintTop_toTopOf="@+id/idloaisanpham">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_loaisanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="id" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_hinhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="80sp"
            android:text="Hình ảnh: "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idloaisanpham" />

        <ImageView
            android:id="@+id/imv_hinhanh"
            android:layout_width="120sp"
            android:layout_height="100sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_hinhanh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imb_themhinhanh"
            app:layout_constraintTop_toTopOf="@+id/txt_hinhanh"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imb_themhinhanh"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginStart="20sp"
            android:background="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="@+id/txt_hinhanh"
            app:layout_constraintStart_toEndOf="@+id/txt_hinhanh"
            app:layout_constraintTop_toTopOf="@+id/txt_hinhanh"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/imb_add"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginBottom="40sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>