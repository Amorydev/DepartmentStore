<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LienHeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="10sp"
            android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:gravity="center"
            android:text="@string/lien_he"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="@drawable/lienhe2"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" >

    </androidx.constraintlayout.widget.ConstraintLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40sp"
        android:src="@drawable/lienhe2"
        app:civ_border_color="#06930C"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/bg_lienhe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image">

        <ImageView
            android:id="@+id/imv_fb"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/ic_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imv_fb"
            app:layout_constraintStart_toEndOf="@+id/imv_fb"
            app:layout_constraintTop_toTopOf="@+id/imv_fb" />
        <ImageView
            android:id="@+id/imv_insta"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/ic_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_fb" />

        <TextView
            android:id="@+id/txt_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imv_insta"
            app:layout_constraintStart_toEndOf="@+id/imv_insta"
            app:layout_constraintTop_toTopOf="@+id/imv_insta" />
        <ImageView
            android:id="@+id/imv_github"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/ic_github"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_insta" />

        <TextView
            android:id="@+id/txt_git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imv_github"
            app:layout_constraintStart_toEndOf="@+id/imv_github"
            app:layout_constraintTop_toTopOf="@+id/imv_github" />
        <ImageView
            android:id="@+id/imv_email"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="40sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_github" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imv_email"
            app:layout_constraintStart_toEndOf="@+id/imv_email"
            app:layout_constraintTop_toTopOf="@+id/imv_email" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>