<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hình dạng checkbox được chọn -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#DEFDDF" />
            <stroke
                android:width="2dp"
                android:color="@color/main" />
        </shape>
    </item>
    <!-- Hình dạng hình trong nhỏ ở tâm -->
    <item android:gravity="center"
        android:width="20dp"
        android:height="20dp"
        android:start="10sp"
        android:top="10sp"
        android:bottom="10sp"
        android:right="10sp">
        <shape android:shape="oval">
            <solid android:color="#06F110" />
        </shape>
    </item>
</layer-list>